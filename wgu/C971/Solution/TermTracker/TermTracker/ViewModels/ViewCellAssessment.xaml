<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.ViewModels.ViewCellAssessment">
    <ViewCell.View>
        <Frame BorderColor="#0a255c" BackgroundColor="#0a255c" CornerRadius="7" Padding="2" HeightRequest="65" Margin="0,3,0,3">
            <StackLayout HorizontalOptions="Center">
                <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                <Label Text="{Binding AssessmentType, StringFormat='{0} Assessment'}" FontSize="Micro" TextColor="White" HorizontalTextAlignment="Center" />
                <Label Text="{Binding Status, StringFormat='Status: {0}'}" FontSize="Micro" TextColor="White" HorizontalTextAlignment="Center" />
            </StackLayout>
        </Frame>
    </ViewCell.View>
</ViewCell>