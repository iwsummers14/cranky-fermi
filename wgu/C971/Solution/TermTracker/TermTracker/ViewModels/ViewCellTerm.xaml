<?xml version="1.0" encoding="UTF-8"?>
<!-- View model for displaying Terms in a ListView using a data-bound view cell. -->
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermTracker.ViewModels.ViewCellTerm">
    <ViewCell.View>
        <Frame BorderColor="#0a255c" BackgroundColor="#0a255c" CornerRadius="7" Padding="5"  HeightRequest="75" Margin="0,3,0,3">
            <StackLayout HorizontalOptions="Center">
                <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                <Label Text="{Binding Status, StringFormat='Status: {0:F0}'}" TextColor="White" HorizontalTextAlignment="Center" />
                <Label TextColor="White" HorizontalTextAlignment="Center" >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding StartDate, StringFormat='{0:d} to'}" />
                            <Span Text="{Binding EndDate, StringFormat=' {0:d}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
        </Frame>
    </ViewCell.View>
</ViewCell>